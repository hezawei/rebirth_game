# Rebirth Game 环境配置文件
# 复制此文件为 .env 并填入实际配置值

# === 数据库配置 (PostgreSQL) ===
# 必需：PostgreSQL连接字符串 (SQLAlchemy/psycopg2格式)
# 如果密码包含特殊字符(@, :, /, #)，需要进行URL编码
# 例如：my@pass -> my%40pass
DATABASE_URL="postgresql+psycopg2://rebirth:StrongPass%21@db:5432/rebirth"

# 强制使用PostgreSQL
ENFORCE_DB_VENDOR=postgresql

# === 数据库容器配置 ===
PGUSER=rebirth
PGPASSWORD=StrongPass!
PGPASSWORD_ENC=StrongPass%21
PGDATABASE=rebirth
PG_PORT=5432

# === 服务器配置 ===
# Gunicorn工作进程数 (推荐：CPU核数*2+1)
GUNICORN_WORKERS=4

# 应用端口
APP_PORT=8000

# 日志级别
LOG_LEVEL=info

# === 资源限制 ===
CPU_LIMIT=2.0
MEMORY_LIMIT=2G
MEMORY_RESERVE=512M

# === Nginx配置 ===
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# === LLM API配置 ===
# 至少配置一个LLM API密钥，应用才能正常运行

# OpenAI API
OPENAI_API_KEY=

# 豆包/字节跳动 API  
DOUBAO_API_KEY=

# Google Gemini API
GOOGLE_API_KEY=

# Anthropic Claude API
ANTHROPIC_API_KEY=

# === 应用配置 ===
APP_ENV=production
DEBUG=false

# === 安全配置 ===
# 生产环境建议修改默认密码
SECRET_KEY=your-secret-key-here
